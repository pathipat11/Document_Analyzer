  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/pathipat11/Document_Analyzer/issues"
  },
  "homepage": "https://github.com/pathipat11/Document_Analyzer#readme",
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.18",
    "tailwindcss": "^4.1.18"
  }
}